<footer class="footer bg-gradient py-5 mt-auto text-white border-top">
  <div class="container">
    <div class="row">
      <!-- Sol Bölüm -->
      <div class="col-md-6 mb-4">
        <h5 class="fw-bold text-uppercase">Acumeet</h5>
        <p class="text-light">
          Acumeet is a platform designed for knowledge sharing and interaction. Join us and explore a world of ideas!
        </p>
      </div>

      <!-- Sağ Bölüm -->
      <div class="col-md-6 mb-4">
        <h5 class="fw-bold text-uppercase">Quick Links</h5>
        <ul class="list-unstyled">
          <li class="mb-2"><%= link_to "Home", root_path, class: "text-white text-decoration-none" %></li>
          <li class="mb-2"><%= link_to "Upload Post", new_post_path, class: "text-white text-decoration-none" %></li>
          <li class="mb-2"><%= link_to "About", home_about_path, class: "text-white text-decoration-none" %></li> <!-- Updated About Link -->
          <% if user_signed_in? %>
            <li class="mb-2"><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "text-white text-decoration-none" %></li>
          <% else %>
            <li class="mb-2"><%= link_to "Sign Up", new_user_registration_path, class: "text-white text-decoration-none" %></li>
          <% end %>
        </ul>
      </div>
    </div>

    <!-- Sosyal Medya Bölümü -->
    <div class="text-center mt-4">
      <h5 class="fw-bold text-uppercase">Follow Us</h5>
      <div>
        <%= link_to "https://facebook.com", target: "_blank" do %>
          <i class="fab fa-facebook-square fa-3x mx-3 social-icon"></i>
        <% end %>
        <%= link_to "https://twitter.com", target: "_blank" do %>
          <i class="fab fa-twitter-square fa-3x mx-3 social-icon"></i>
        <% end %>
        <%= link_to "https://instagram.com", target: "_blank" do %>
          <i class="fab fa-instagram-square fa-3x mx-3 social-icon"></i>
        <% end %>
        <%= link_to "https://linkedin.com", target: "_blank" do %>
          <i class="fab fa-linkedin fa-3x mx-3 social-icon"></i>
        <% end %>
      </div>
    </div>

    <div class="text-center mt-4">
      <p class="text-muted small">© <%= Date.today.year %> Acumeet. All rights reserved.</p>
    </div>
  </div>
</footer>
