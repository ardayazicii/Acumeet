<nav class="navbar navbar-expand-lg navbar-dark">
  <div class="container">
    <%= link_to "Home", root_path, class: "navbar-brand" %>
    
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <% if user_signed_in? %>
          <li class="nav-item me-3">
            <%= link_to "Upload Post", new_post_path, class: "nav-link" %>
          </li>
          <li class="nav-item me-3">
            <%= link_to "My Posts", posts_myposts_path, class: "nav-link" %>
          </li>
          <li class="nav-item me-3">
            <%= link_to "My Profile", current_user, class: "nav-link" %>
          </li>
          <li class="nav-item me-3">
            <%= link_to "Edit Account", edit_user_registration_path, class: "nav-link" %>
          </li>
          <li class="nav-item me-3">
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "nav-link text-danger" %>
          </li>
        <% else %>
          <li class="nav-item me-3">
            <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>

      <% if user_signed_in? %>
        <div class="d-flex align-items-center ms-auto">
          <% if current_user.avatar.attached? %>
            <%= image_tag current_user.avatar, class: "rounded-circle me-2" %>
          <% else %>
            <%= image_tag "default_avatar.png", class: "rounded-circle me-2" %>
          <% end %>
          <span>Hello, <%= current_user.username %>!</span>
        </div>
      <% end %>
    </div>
  </div>
</nav>




